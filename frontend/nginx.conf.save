server {
  listen 80;
  server_name _;

  # Serve your single-page app
  location / {
    try_files $uri $uri/ /index.html;
  }

  # Proxy all API calls under /session, /query, /collect_user_data to backend
  location /session {
    proxy_pass http://    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
  location /query {
    proxy_pass http://host.docker.internal:8000/query;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
  location /collect_user_data {
    proxy_pass http://host.docker.internal:8000/collect_user_data;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}
